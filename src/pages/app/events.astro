---
import Layout from '../../layouts/Layout.astro';
import AppLayout from '../../components/AppLayout';

const title = 'Events';
const description = 'View and RSVP to upcoming events';
---

<Layout title={title} description={description}>
  <AppLayout client:only="react" currentPath="/app/events">
    <div class="space-y-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-zinc-900 dark:text-white">Events</h1>
          <p class="mt-2 text-sm text-zinc-600 dark:text-zinc-400">
            View upcoming events and manage your RSVPs
          </p>
        </div>
        <button
          id="create-event-btn"
          style="display: none;"
          class="inline-flex items-center gap-2 rounded-lg bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm transition-colors hover:bg-indigo-500"
        >
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Create Event
        </button>
      </div>

      <div id="events-container">
        <div class="text-center py-12">
          <div class="inline-block h-8 w-8 animate-spin rounded-full border-4 border-solid border-indigo-600 border-r-transparent dark:border-indigo-400"></div>
          <p class="mt-4 text-sm text-zinc-600 dark:text-zinc-400">Loading events...</p>
        </div>
      </div>
    </div>
  </AppLayout>

  <script>
    import { pb } from '../../lib/pocketbase';

    // Check if user is logged in
    const user = pb.authStore.model;
    if (!user) {
      window.location.href = '/login';
    }

    interface Event {
      id: string;
      title: string;
      description: string;
      date: string;
      time: string;
      time_zone: string;
      location: string;
      location_details?: string;
      type: string;
      tags: string;
      created: string;
      updated: string;
    }

    const isModerator = user?.role === 'moderator';

    async function loadEvents() {
      const container = document.getElementById('events-container');
      if (!container) return;

      try {
        // Fetch events from PocketBase
        const events = await pb.collection('events').getFullList<Event>({
          sort: 'date',
        });

        if (events.length === 0) {
          container.innerHTML = `
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-zinc-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <h3 class="mt-2 text-sm font-semibold text-zinc-900 dark:text-white">No events</h3>
              <p class="mt-1 text-sm text-zinc-500 dark:text-zinc-400">No events have been scheduled yet.</p>
            </div>
          `;
          return;
        }

        // Render events table
        const eventsHTML = events.map(event => {
          const eventDate = new Date(event.date);
          const formattedDate = eventDate.toLocaleDateString('en-US', {
            weekday: 'short',
            year: 'numeric',
            month: 'short',
            day: 'numeric',
          });

          return `
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div>
                    <div class="text-sm font-medium text-zinc-900 dark:text-white">${event.title}</div>
                    <div class="text-sm text-zinc-500 dark:text-zinc-400">${event.type}</div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-zinc-900 dark:text-white">${formattedDate}</div>
                <div class="text-sm text-zinc-500 dark:text-zinc-400">${event.time} ${event.time_zone}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-zinc-900 dark:text-white">${event.location}</div>
                ${event.location_details ? `<div class="text-sm text-zinc-500 dark:text-zinc-400">${event.location_details}</div>` : ''}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex items-center justify-end gap-2">
                  ${isModerator ? `
                    <button
                      onclick="editEvent('${event.id}')"
                      class="text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300"
                    >
                      Edit
                    </button>
                    <button
                      onclick="deleteEvent('${event.id}')"
                      class="text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300"
                    >
                      Delete
                    </button>
                  ` : `
                    <button
                      onclick="alert('RSVP functionality coming soon!')"
                      class="text-indigo-600 hover:text-indigo-900 dark:text-indigo-400 dark:hover:text-indigo-300"
                    >
                      RSVP
                    </button>
                  `}
                </div>
              </td>
            </tr>
          `;
        }).join('');

        container.innerHTML = `
          <div class="overflow-hidden rounded-lg border border-zinc-200 dark:border-zinc-800">
            <table class="min-w-full divide-y divide-zinc-200 dark:divide-zinc-800">
              <thead class="bg-zinc-50 dark:bg-zinc-900">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-zinc-500 uppercase tracking-wider dark:text-zinc-400">
                    Event
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-zinc-500 uppercase tracking-wider dark:text-zinc-400">
                    Date & Time
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-zinc-500 uppercase tracking-wider dark:text-zinc-400">
                    Location
                  </th>
                  <th scope="col" class="relative px-6 py-3">
                    <span class="sr-only">Actions</span>
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-zinc-200 dark:bg-zinc-900 dark:divide-zinc-800">
                ${eventsHTML}
              </tbody>
            </table>
          </div>
        `;
      } catch (error) {
        console.error('Error loading events:', error);
        container.innerHTML = `
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <h3 class="mt-2 text-sm font-semibold text-zinc-900 dark:text-white">Error loading events</h3>
            <p class="mt-1 text-sm text-zinc-500 dark:text-zinc-400">${error instanceof Error ? error.message : 'Failed to load events'}</p>
          </div>
        `;
      }
    }

    // Make edit and delete functions global for onclick handlers
    (window as any).editEvent = function(eventId: string) {
      window.location.href = `/app/create-event?edit=${eventId}`;
    };

    (window as any).deleteEvent = async function(eventId: string) {
      if (!confirm('Are you sure you want to delete this event?')) {
        return;
      }

      try {
        await pb.collection('events').delete(eventId);
        loadEvents(); // Reload the list
      } catch (error) {
        console.error('Error deleting event:', error);
        alert('Failed to delete event: ' + (error instanceof Error ? error.message : 'Unknown error'));
      }
    };

    // Wait for container to be available before loading events
    function waitForContainer() {
      const container = document.getElementById('events-container');
      const createBtn = document.getElementById('create-event-btn');

      if (container && createBtn) {
        // Show Create Event button for moderators
        if (isModerator) {
          createBtn.style.display = 'inline-flex';
          createBtn.addEventListener('click', () => {
            window.location.href = '/app/create-event';
          });
        }

        loadEvents();
      } else {
        setTimeout(waitForContainer, 50);
      }
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', waitForContainer);
    } else {
      waitForContainer();
    }
  </script>
</Layout>
